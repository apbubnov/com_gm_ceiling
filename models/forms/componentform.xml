<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="component_title" type="text" label="COM_GM_CEILING_FORM_LBL_COMPONENT_COMPONENT_TITLE" description="COM_GM_CEILING_FORM_DESC_COMPONENT_COMPONENT_TITLE" hint="COM_GM_CEILING_FORM_LBL_COMPONENT_COMPONENT_TITLE"/>
    <field name="component_unit" type="text" label="COM_GM_CEILING_FORM_LBL_COMPONENT_COMPONENT_UNIT" description="COM_GM_CEILING_FORM_DESC_COMPONENT_COMPONENT_UNIT" hint="COM_GM_CEILING_FORM_LBL_COMPONENT_COMPONENT_UNIT"/>
    <field name="component_price" type="text" filter="raw" label="COM_GM_CEILING_FORM_LBL_COMPONENT_COMPONENT_PRICE" description="COM_GM_CEILING_FORM_DESC_COMPONENT_COMPONENT_PRICE" hint="COM_GM_CEILING_FORM_LBL_COMPONENT_COMPONENT_PRICE"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
