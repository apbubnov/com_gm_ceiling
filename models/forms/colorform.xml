    <field name="color_file" type="media" directory="canvases" label="COM_GM_CEILING_FORM_LBL_COLOR_COLOR_FILE" description="COM_GM_CEILING_FORM_DESC_COLOR_COLOR_FILE" hint="COM_GM_CEILING_FORM_LBL_COLOR_COLOR_FILE"/>
    <field name="color_hex" type="text" filter="string" label="COM_GM_CEILING_FORM_LBL_COLOR_COLOR_HEX" description="COM_GM_CEILING_FORM_DESC_COLOR_COLOR_HEX" hint="COM_GM_CEILING_FORM_LBL_COLOR_COLOR_HEX"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
    
  </fieldset>
</form>
